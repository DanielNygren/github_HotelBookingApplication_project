@page
@model Inlämning3ApplikationHotelBooking.Pages.Reviews.EditModel
@using Inlämning3ApplikationHotelBooking.Models;

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Review</h4>
<hr />
<div>
    <div>
        <form method="post">
            <input type="hidden" asp-for="Review.ID" />
            <div>
                <label>Comment</label>
                <input asp-for="Review.Comment" />
            </div>
            <div>
                <label>Rating</label>
                <select asp-for="Review.Rating" asp-items="Html.GetEnumSelectList<Rating>()"></select>
            </div>
            <div>
                <input type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
